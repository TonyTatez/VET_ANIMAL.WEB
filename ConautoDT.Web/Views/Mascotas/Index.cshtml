                    <div class="form-row">

                        <div class="form-group col-md-6">
                            <label for="">Nombre</label>
                            <input type="text" class="form-control" id="" placeholder="Ingrese Nombre Mascota">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="">Id Cliente</label>
                            <input type="text" class="form-control mb-3" readonly style="width:50%!important">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="">Peso</label>
                            <input type="number" class="form-control" id="" placeholder="Ingrese Peso Mascota">
                        </div>
                        <div class="form-group col-md-6">
                            <label for=""> Raza</label>
                            <select type="text" class="form-control" id="">
                                <option value="">Seleccione</option>
                                <option value="">Labrador</option>
                                <option value="">Bulldog</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="">Sexo</label>
                            <select type="text" class="form-control" id="">
                                <option value="">Seleccione</option>
                                <option value="">Macho</option>
                                <option value="">Hembra</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for=""> Fecha de Nacimiento</label>
                            <input class="form-control" name="fecha" style="width:89%;" max="2023-11-11" type="date" required="">
                        </div>
                    </div>




                </div>
                <div class="modal-footer" style="background: #FAEFF3">
                    <button id="guardarInformacion2" type="submit" class="btn btn-success btn-grad btn-sm">
                        Guardar
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
