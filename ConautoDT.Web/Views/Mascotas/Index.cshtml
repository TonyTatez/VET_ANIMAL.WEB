<div class="row" style="font-size: 13px !important;">
    <div class="col-md-12">
        <div class="widget">
            <header class="widget-header" style="padding-bottom: 5px !important;">
                <div class="row">
                    <h4 class="widget-title col-md-12" style="font-weight:400 !important;font-size: 21px; color:#333333; ;font-family: 'Young Serif', sans-serif; ">Mascotas</h4>
                </div>
            </header>
            <hr class="widget-separator" style="margin-top:2px !important">
            <div class="widget-body">
                <div class="btn-group" role="group" aria-label="Basic mixed styles example" style="margin-bottom:5px !important;">
                    <button id="btnNuevo" type="button" class="btn btn-success btn-sm bi bi-clipboard-plus" data-bs-toggle="modal" onclick="nuevo();" data-bs-target="#exampleModal">   Nuevo </button>
                </div>
                <div class="table-responsive" style="font-family: 'Young Serif', sans-serif; ">
                    <table class="table table-bordered table-sm  dataTable table-striped" id="tablaMascotas">
                        <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Nombre
                                </th>
                                
                                <th>
                                    Raza
                                </th>
                                <th>
                                    Sexo
                                </th>
                                <th>
                                    Peso
                                </th>
                                <th>
                                    Dueño
                                </th>
                                <th>
                                    Fecha de Nacimiento
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListaMascota != null)
                            {
                                @foreach (var item in Model.ListaMascota)
                                {
                                    @Html.HiddenFor(model => item.idMascota)
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => item.idMascota)
                                            
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.nombreMascota)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.raza)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.sexo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.peso)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.cliente)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.fechaNacimiento)
                                        </td>
                                        <td>
                                            <button title="Editar Cliente" class="btn p-v-sm btn-success btn-sm btn-editar" data-bs-toggle="modal" data-bs-target="#editarModal" onclick="editarCliente();">
                                                <i class="bi bi-pen"></i>
                                            </button>
                                            <button title="Eliminar Cliente" class="btn p-v-sm btn-danger btn-sm" id="btnEliminar" data-bs-toggle="modal" data-bs-target="#eliminarModal" onclick="eliminarCliente();">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Raza
                                </th>
                                <th>
                                    Sexo
                                </th>
                                <th>
                                    Peso
                                </th>
                                <th>
                                    Dueño
                                </th>
                                <th>
                                    Fecha de Nacimiento
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
