                    <button type="button" style="color: black" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
            </div>

            <form asp-action="GuardaryEditarInfo" style="font-family: 'Young Serif', sans-serif;">
